<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.persmakreatif.ui.home.HomeFragment"
        android:label="Berita"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.persmakreatif.ui.dashboard.DashboardFragment"
        android:label="Majalah"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notification"
        android:name="com.example.persmakreatif.ui.notifications.NotificationsFragment"
        android:label="Kirim Berita"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_akun"
        android:name="com.example.persmakreatif.ui.akun.FragmentAkun"
        android:label="Akun"
        tools:layout="@layout/fragment_notifications" />
</navigation>